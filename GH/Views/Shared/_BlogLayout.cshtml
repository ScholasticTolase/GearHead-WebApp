<!DOCTYPE HTML>
<html>


<head>
    <title>Gearhead::@ViewBag.Title </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Car auto fix, car breakdown, tricks to fox your car, Quick fix for your car" />

    <link href="~/Content/blog/css/bootstrap.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Content/blog/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/flexslider.css" type="text/css" media="screen" />
    <script src="~/Content/blog/js/jquery.min.js"></script>

    @*   @Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
 

    <link href="https://fonts.gstatic.com/s/opensans/v17/mem8YaGs126MiZpBA-UFVZ0b.woff2" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,500;1,400;1,500&display=swap" rel="stylesheet">


    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
</head>




<body>
    <!-- header -->

    <div class="content-main">
        <div class="container">
            <div class="col-md-3 top-left">
                <div class="logo">
                    <a href="#"><img src="~/Content/blog/images/logonew.jpg" class="img-responsive" alt="" /></a>
                </div>
                <div class="mene">
                    <h4 class="menn">Menu <span style="color: gray;" class="menu fa fa-arrow-down"> </span></h4>
                </div>

                <div class="head-nav">

                    @if (Session["UserId"] != null)
                    {
                        <ul>
                            @*
                    <li><a href="404.html"></a></li>
                            *@

                            @* If the Session is set *@
                            <li>@Html.ActionLink("Home", "Userpage", "Home")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                        </ul>
                    }

                    <!-- script-for-nav -->
                    <script>
                        $("span.menu").click(function () {
                            $(".project ul").slideToggle(300),
                                $(".head-nav ul").slideToggle(300)
                        });
                    </script>
                    <!-- script-for-nav -->
                    @Html.Partial("_NotLoggedNav")

                    <div class="clearfix"> </div>

                </div>
                <div class="clearfix"> </div>

                @* Nav Link for loggedin User*@

                @if (Session["UserId"] != null)
                {
                    <div class="project">
                        <h4>@Html.ActionLink("Maintenance", "Index", "Articles")</h4>
                    </div>
@*
                    <div class="project">
                        <h4>Know-How Blog</h4>
                    </div>*@

                    <div class="project">
                        <h4>@Html.ActionLink("Contact Us", "Contact", "Home")</h4>
                    </div>

                    <div class="project">
                        <h4>@Html.ActionLink("About Us", "About", "Home")</h4>
                    </div>

                    <div class="project">
                        <h4>Twitter Feed </h4>
                        <a class="twitter-timeline" data-height="500" href="https://twitter.com/TwitterDev?ref_src=twsrc%5Etfw">Tweets by TwitterDev</a>
                        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                    </div>
                }

                @* End of Nav Link for loggedin User*@




            </div>
            <div class="col-md-9 top-right">



                @RenderBody()


            </div>
            <div class="clearfix"> </div>
        </div>
    </div>

    </div>

    <!-- footer -->
    <div class="footer fixed-bottom" style="position: fixed; left: 0; bottom: 0; width: 100%; height: 10px;">
        <div class="container">
            <p>Copyrights © 2020 GearHead All rights reserved </p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

