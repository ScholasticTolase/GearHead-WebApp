    <script>
        $(document).ready(function () {
            $("#msg").hide();
            $("#feedback").hide();
            IsProgress(false);
            $(".LoginForm").on("submit", function (e) {
                e.preventDefault();
                //Ajax
                $.ajax({
                    url: "/Home/CheckUser",
                    type: "POST",
                    data: $(this).serialize(),
                    success: function (result) {
                        console.log(result)

                        if (result == "Fail") {
                            $(".LoginForm")[0].reset();
                            $("#msg").show();
                        }
                        else {
                            window.location.href = "/Home/UserPage";
                            $("#msg").hide();
                        }
                    }
                })
            })
        
 


            @*------------------------ FOR THE REGISTRATION OF USER-----------------------------------*@




            $("#MyReg").on("#btnSubmit", function (f) {
                f.preventDefault();

                //Getting form data
                var firstname = $("#FirstName").val();
                var lastname = $("#LastName").val();
                var email = $("#Email").val();
                var phonenumber = $("#PhoneNumber").val();
                var username = $("#Username").val();
                var password = $("#Password").val();
                var confirmpassword = $("#ConfirmPassword").val();

                var obj = {
                    FirstName: firstname,
                    LastName: lastname,
                    Email: email,
                    PhoneNumber: phonenumber,
                    Username: username,
                    Password: password,
                    ConfirmPassword: confirmpassword,
                };
                //Ajax
                $.ajax({
                    url: "/Home/CreateUser",
                    type: "POST",
                    data: obj,
                    success: function (response) {
                        if (response == "Fail") {
                            $("#MyReg")[0].reset();
                            $("#feedback").hide();
                        }
                        else {

                            window.location.href = "/Home/LandPage#MyModal";
                            $("#feedback").show();
                        }
                    }
                });
            });//submit action ends
               // function progress

            function IsProgress(val) {
                if (val == true) {
                    $("#btnLogin").html("<i class='fa fa-spinner fa-spin'></i> Please wait.");
                    $("#btnSubmit").html("<i class='fa fa-spinner fa-spin'></i> Please wait.");
                }
                else {
                    $("#btnSubmit").html("Create Account");
                    $("#btnLogin").html("Sign in");
                }
            }   
        });


    </script>



