@model GH.Models.AdminAccount
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="ch-container">
    <div class="row">

        <div class="row">
            <div class="col-md-12 center login-header">
                <h2>Welcome to GearHead</h2>
            </div>
        </div><!--/row-->

        <div class="row">
            <div class="well col-md-5 center login-box">
                <div class="alert alert-info">
                    Please login with your Username and Password.
                </div>

                <form action="/Admin/AdminLogin" method="post">

                   @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <fieldset>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="Username">Username</label>
                                <div class="col-md-6">
                                    <input class="form-control text-box single-line" id="Username" name="Username" type="text" value="">
                                    <span class="field-validation-valid text-danger" data-valmsg-for="Username" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="Password">Password</label>
                                <div class="col-md-6">
                                    <input class="form-control text-box single-line" id="Password" name="Password" type="password" value="">
                                    <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                                </div>
                            </div>

                            <div class="col-md-offset-2 col-md-3" ">
                                <input type="submit" value="Login" class="btn btn-primary" style="margin-right: 2px!important;">
                            </div>
                                <!-- An element to toggle between password visibility -->
                            <p style="margin-bottom: 5px; margin-top:45px; margin-right: 190px;"><input type="checkbox" onclick="myFunction()">Show Password</p>
                            <br />
                            <p style="margin-right: 95px!important;"> Don't have an account yet? <a href="/Home/Registration">Sign Up here</a></p>
                        </fieldset>
                    </div>
                </form>
            </div><!--/span-->
        </div><!--/row-->
    </div><!--/fluid-row-->
</div><!--/.fluid-container-->
<script>

    function myFunction() {
        var x = document.getElementById("Password");
        if (x.type === "password") {
            x.type = "text";
        }
        else {
            x.type = "password";
        }
    }
</script>